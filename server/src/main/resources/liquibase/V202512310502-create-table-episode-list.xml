<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310502" author="Chivehao">
        <comment>Create `episode_list` table</comment>
        <createTable tableName="episode_list">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_time" type="TIMESTAMP(6)"/>
            <column name="create_uid" type="UUID"/>
            <column name="delete_status" type="BOOL"/>
            <column name="update_time" type="TIMESTAMP(6)"/>
            <column name="update_uid" type="UUID"/>
            <column name="ol_version" type="INT8"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="name_cn" type="VARCHAR(255)"/>
            <column name="cover" type="VARCHAR(10000)"/>
            <column name="description" type="VARCHAR(50000)"/>
            <column name="nsfw" type="BOOL"/>
        </createTable>
    </changeSet>
</databaseChangeLog>