<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310437" author="Chivehao">
        <comment>Create `subject_sync` table</comment>
        <createTable tableName="subject_sync">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_time" type="TIMESTAMP(6)"/>
            <column name="create_uid" type="UUID"/>
            <column name="delete_status" type="BOOL"/>
            <column name="update_time" type="TIMESTAMP(6)"/>
            <column name="update_uid" type="UUID"/>
            <column name="ol_version" type="INT8"/>
            <column name="subject_id" type="UUID"/>
            <column name="platform" type="VARCHAR(255)"/>
            <column name="platform_id" type="VARCHAR(255)"/>
            <column name="sync_time" type="TIMESTAMP(6)"/>
        </createTable>
        <createIndex tableName="subject_sync" indexName="platform_pid_ukey" unique="true">
            <column name="platform" />
            <column name="platform_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>