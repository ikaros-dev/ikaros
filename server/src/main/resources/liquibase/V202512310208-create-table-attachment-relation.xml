<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310208" author="Chivehao">
        <comment>Create `attachment_relation` table</comment>
        <createTable tableName="attachment_relation">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="attachment_id" type="UUID"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="relation_attachment_id" type="UUID"/>
        </createTable>
    </changeSet>
</databaseChangeLog>