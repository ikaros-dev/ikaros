<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310220" author="Chivehao">
        <comment>Create `episode_collection` table</comment>
        <createTable tableName="episode_collection">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID"/>
            <column name="subject_id" type="UUID"/>
            <column name="episode_id" type="UUID"/>
            <column name="finish" type="BOOL"/>
            <column name="progress" type="INT8"/>
            <column name="duration" type="INT8"/>
            <column name="update_time" type="TIMESTAMP(6)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>