<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310202" author="Chivehao">
        <comment>Create `attachment` table</comment>
        <createTable tableName="attachment">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="parent_id" type="UUID"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="url" type="VARCHAR(5000)"/>
            <column name="path" type="VARCHAR(5000)"/>
            <column name="fs_path" type="VARCHAR(5000)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="size" type="INT8"/>
            <column name="update_time" type="TIMESTAMP(6)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>