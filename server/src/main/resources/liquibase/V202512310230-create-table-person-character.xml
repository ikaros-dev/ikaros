<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310230" author="Chivehao">
        <comment>Create `person_character` table</comment>
        <createTable tableName="person_character">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_time" type="TIMESTAMP(6)"/>
            <column name="create_uid" type="UUID"/>
            <column name="delete_status" type="BOOL"/>
            <column name="update_time" type="TIMESTAMP(6)"/>
            <column name="update_uid" type="UUID"/>
            <column name="ol_version" type="INT8"/>
            <column name="person_id" type="UUID"/>
            <column name="character_id" type="UUID"/>
        </createTable>
    </changeSet>
</databaseChangeLog>