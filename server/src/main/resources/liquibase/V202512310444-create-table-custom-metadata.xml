<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="V202512310444" author="Chivehao">
        <comment>Create `custom_metadata` table</comment>
        <createTable tableName="custom_metadata">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="custom_id" type="UUID"/>
            <column name="cm_key" type="VARCHAR(255)"/>
            <column name="cm_value" type="BYTEA"/>
        </createTable>
        <createIndex tableName="custom_metadata" indexName="custom_metadata_custom_id_em_key" unique="true">
            <column name="custom_id" />
            <column name="cm_key" />
        </createIndex>
    </changeSet>
</databaseChangeLog>